<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FCEDEA">

    <ImageView
        android:id="@+id/account"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/account" />

    <ImageView
        android:id="@+id/notification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/notifications" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:src="@drawable/logo"
            android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/custom1"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/search"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:src="@drawable/pizza"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="400dp"
        android:id="@+id/layout_category">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:id="@+id/category"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/pizza_all"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/custom4"
            android:id="@+id/makanan_all"

            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/makanan"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/custom4"
            android:layout_toRightOf="@id/makanan_all"
            android:id="@+id/makanan"

            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/snak"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/custom4"
            android:layout_toRightOf="@id/makanan"
            android:id="@+id/snack"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/minuman"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/custom4"
            android:layout_toRightOf="@id/snack"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:text="All"
            android:layout_below="@id/makanan_all"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:id="@+id/txt_all"
            />

        <TextView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_below="@id/makanan"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:text="Burger"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/txt_all"
            android:id="@+id/txt_burger"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_below="@id/makanan"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:text="Kentang"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/txt_burger"
            android:id="@+id/txt_kentang"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_below="@id/makanan"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:text="Minuman"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/txt_kentang"
            android:id="@+id/txt_minuman"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Popular Now"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:layout_below="@id/txt_all"
            android:layout_marginLeft="20dp"
            android:id="@+id/txt_popular"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_below="@id/layout_category"
        android:layout_marginLeft="20dp"
        android:background="@drawable/custom4"
        android:id="@+id/popular_1">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/makanan"
            android:id="@+id/burger_popular"/>

        <TextView
            android:layout_width="120dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/burger_popular"
            android:text="Beef Burger"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/custom4"
        android:layout_below="@id/layout_category"
        android:layout_toRightOf="@id/popular_1"
        android:id="@+id/popular_2">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/minuman"
            android:id="@+id/minuman_populer"/>

        <TextView
            android:layout_width="120dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/minuman_populer"
            android:text="Dalgona Coffe"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popular_3"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/custom4"
        android:layout_below="@id/layout_category"
        android:layout_toRightOf="@id/popular_2">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/snak"
            android:id="@+id/kentang"/>

        <TextView
            android:layout_width="150dp"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/kentang"
            android:text="French Fries"
            android:textColor="@color/white"/>
    </RelativeLayout>



</RelativeLayout>